<h1>{{team.name}} - {{team.tv}}</h1>
<table class="table table-bordered">
  {{partial "rosters/team_attributes"}}
</table>

<a {{action "addPlayer"}}>Add Player</a>
{{collection
  itemViewClass="CalculateYourTV.PlayerView"
  contentBinding=team.players
  tagName="table"
  classNames="table table-bordered"}}

{{#if skillSelectVisible}}

	<div class="modal" id="modal">
   <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Add Skill(s) To {{currentPlayer.name}}</h4>
        </div>
        <div class="modal-body">
          {{partial "rosters/skill_select_box"}}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
{{/if}}